#parse("/velocity/layout.vm")
#@mainLayout()


	<h1>Notificaciones</h1>

		
	<table style="width:100%">
  		<tr>	
    		<th>Fecha</th>
    		<th>Hora</th>   
    		<th>Tipo</th>    				
    		<th>Descripcion</th>
    		<th>Ver Detalle</th>   		
  		</tr>
  	
  		#foreach($!n in $!notificaciones.getNotificacion())
  		<tr>
  			<td> $!n.imprimirFecha()</td>
  			<td> $!n.imprimirHora()</td>
           	<td> $!n.getTipo()</td> 	
           	<td> $!n.getDescripcion()</td> 		 	
           		 	
  		</tr>
    	#end
	</table>
	

#end