
#parse("/velocity/layout.vm")
#@mainLayout()

## <h1>Registration</h1>
<form id="registrationForm" method="post" action = "/registration/">

 	#if($registrationFailed)
        <p class="bad notification">$msg.get("REGISTRATION_AUTH_FAILED")</p>
    #elseif($existingUser)
        <p class="notification">$msg.get("REGISTRATION_EXISTING_USER")</p>    
    #elseif($registrationSucceeded)
        <p class="good notification">$msg.get("REGISTRATION_AUTH_SUCCEEDED")</p>
    #end
    
    <h1>$msg.get("REGISTRATION_HEADING")</h1>
    
    <label>$msg.get("REGISTRATION_LABEL_NAME")</label><br>
    <input type="text" name="name" placeholder="$msg.get("REGISTRATION_LABEL_NAME")" value="" required><br>
    
    <label>$msg.get("REGISTRATION_LABEL_LASTNAME")</label><br>
    <input type="text" name="lastname" placeholder="$msg.get("REGISTRATION_LABEL_LASTNAME")" value="" required><br>
    
    <label>$msg.get("REGISTRATION_LABEL_EMAIL")</label><br>
    <input type="email" name="email" placeholder="$msg.get("REGISTRATION_LABEL_EMAIL")" value="" required><br>
    
    <label>$msg.get("REGISTRATION_LABEL_ADDRESS")</label><br>
    <input type="text" name="address" placeholder="$msg.get("REGISTRATION_LABEL_ADDRESS")" value="" required><br>
    
    <label>$msg.get("REGISTRATION_LABEL_PHONE_NUMBER")</label><br>
    <input type="text" name="phoneNumber" placeholder="$msg.get("REGISTRATION_LABEL_PHONE_NUMBER")" value="" required><br>
    
    <label>$msg.get("REGISTRATION_LABEL_SUBDOM")</label><br>
    <input type="text" name="subdom" placeholder="$msg.get("REGISTRATION_LABEL_SUBDOM")" value="" required><br>
    
    
    <label>$msg.get("REGISTRATION_LABEL_PASSWORD")</label><br>
    <input type="password" name="psw1" placeholder="$msg.get("REGISTRATION_LABEL_PASSWORD")" value="" required><br>
    
    <label>$msg.get("REGISTRATION_LABEL_REPEATPASSWORD")</label><br>
    <input type="password" name="psw2" placeholder="$msg.get("REGISTRATION_LABEL_REPEATPASSWORD")" value="" required><br>
    
    
    
    <input type="submit" value="$msg.get("REGISTRATION_BUTTON_REGISTRATION")">
    
  
</form>


#end
