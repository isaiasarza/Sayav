#parse("/velocity/layout.vm")
#@mainLayout()


<form id="loginForm" method="post" action="/login/">

	#if($authenticationFailed)
        <p class="bad notification">$msg.get("LOGIN_AUTH_FAILED")</p>
    #elseif($authenticationSucceeded)
        <p class="good notification">$msg.get("LOGIN_AUTH_SUCCEEDED")</p>
    #elseif($loggedOut)
       <p class="notification">$msg.get("LOGIN_LOGGED_OUT")</p>
    #end
 
    <h1>$msg.get("LOGIN_HEADING")</h1>
    
    <label>$msg.get("LOGIN_LABEL_NAME")</label>
    <input type="text" name="name" placeholder="$msg.get("LOGIN_LABEL_NAME")" value="" required>
    
    <label>$msg.get("LOGIN_LABEL_LASTNAME")</label>
    <input type="text" name="lastname" placeholder="$msg.get("LOGIN_LABEL_LASTNAME")" value="" required>
    
    <label>$msg.get("LOGIN_LABEL_EMAIL")</label>
    <input type="text" name="email" placeholder="$msg.get("LOGIN_LABEL_EMAIL")" value="" required>
    
    <label>$msg.get("LOGIN_LABEL_PASSWORD")</label>
    <input type="password" name="psw1" placeholder="$msg.get("LOGIN_LABEL_PASSWORD")" value="" required>
   
   	#if($loginRedirect)
        <input type="hidden" name="loginRedirect" value="$loginRedirect">
    #end
    <input type="submit" value="$msg.get("LOGIN_BUTTON_LOGIN")">
</form>
#end
